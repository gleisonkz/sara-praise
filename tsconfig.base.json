      "@sp/store/ministry/selectors": ["apps/sp-web/src/app/store/ministry/ministry.selectors"],

      "@sp/web/components": ["apps/sp-web/src/app/components"],
      "@sp/web/directives": ["apps/sp-web/src/app/directives"],
      "@sp/web/domain/auth": ["apps/sp-web/src/app/domain/auth"],

      "@sp/web/domain/ministry": ["apps/sp-web/src/app/domain/ministry"],
      "@sp/web/domain/ministry/state": ["apps/sp-web/src/app/domain/ministry/core/state"],
      "@sp/web/domain/ministry/services": ["apps/sp-web/src/app/domain/ministry/core/services"],

      "@sp/web/domain/scale": ["apps/sp-web/src/app/domain/scale"],
      "@sp/web/mocks": ["apps/sp-web/src/app/mocks"],
      "@sp/web/models": ["apps/sp-web/src/app/models"],
      "@sp/web/pages": ["apps/sp-web/src/app/pages"],
