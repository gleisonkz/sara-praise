      "@sp/web/shared/services": ["apps/sp-web/src/app/shared/services/index.ts"],
      "@sp/web/widget/components": ["apps/sp-web/src/app/widget/components"],
      "@sp/web/widget/directives": ["apps/sp-web/src/app/widget/directives"],
      "@sp/web/widget/pipes": ["apps/sp-web/src/app/widget/pipes"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
