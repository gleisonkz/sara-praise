      "@sp/api/services": ["apps/sp-api/src/app/services"],

      "@sp/shared-interfaces": ["libs/api-interfaces/src/index.ts"],

      "@sp/store/ministry": ["apps/sp-web/src/app/store/ministry"],
      "@sp/store/ministry/actions": ["apps/sp-web/src/app/store/ministry/ministry.actions"],
      "@sp/store/ministry/effects": ["apps/sp-web/src/app/store/ministry/ministry.effects"],
